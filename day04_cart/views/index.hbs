<div class="row">
    <div class="col">
        <form method="POST" action="/">

            <div class="form-group">
                <label for="item">Item</label>
                <input type="text" name="item" id="item" class="form-control" placeholder="Please select an item">
            </div>

            <div class="form-group">
                <label for="quantity">Quantity</label>
                <input type="number" name="quantity" id="quantity" class="form-control" 
                    min="1" placeholder="Please enter the quantity">
            </div>

            <div class="form-group">
                <label for="unitPrice">Unit</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" name="unitPrice" id="unitPrice" class="form-control" 
                        placeholder="Cost per unit item">
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-lg btn-warning">
                    Add to Cart
                </button>
            </div>

            <input type="hidden" name="cartState" value="{{ cartState }}">

        </form>
    </div>

    <div class="col">
        <table class="table mt-3">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                </tr>
            </thead>
            <tbody>
                {{#each cart}}
                    <tr>
                        <td>{{ this.item }}</td>
                        <td>{{ this.quantity }}</td>
                        <td>{{ this.unitPrice }}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>